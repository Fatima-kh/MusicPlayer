<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_music_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_view"
        android:layout_width="65dp"
        android:layout_height="65dp" />


    <TextView
        android:id="@+id/textView_music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_view"
        android:layout_toRightOf="@id/img_view"
        android:hint="@string/title_of_music"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_music_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_music_title"
        android:layout_toEndOf="@id/img_view"
        android:layout_toRightOf="@id/img_view"
        android:hint="@string/artist_name"
        android:textSize="16sp" />
</RelativeLayout>